<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="FNO.Controls.MenuButton">
    <ContentView.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label x:Name="FirstCharLabel" Grid.Column="0" TextColor="{StaticResource AccentColor}" FontSize="{StaticResource LargeFontSize}" Margin="10, 0, -5, 0" VerticalOptions="Center"/>
            <Label x:Name="NameLabel" Grid.Column="1" VerticalOptions="Center" TextColor="{StaticResource AccentColor}" FontSize="{StaticResource MiddleFontSize}" Margin="0, 15, 0, 0"/>
            <Label x:Name="SubNameLabel" Grid.Column="1" VerticalOptions="Center" TextColor="{StaticResource AccentColorLight}" FontSize="{StaticResource SmallFontSize}" Margin="0, 0, 0, 15" />
            <Frame BorderColor="{StaticResource BoarderColor}" BackgroundColor="White" 
                   CornerRadius="10" HasShadow="false" Grid.ColumnSpan="2" 
                   VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Opacity="0.15" />
        </Grid>
    </ContentView.Content>
</ContentView>

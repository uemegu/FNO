<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FNO.Controls.BattleComment">
    <ContentView.Content>
        <Grid x:Name="Area" Margin="50,0,0,0">
            <Label Text="{Binding Text}" VerticalOptions="Center" FontSize="{Binding FontSize}" TextColor="{StaticResource Background}" Margin="1,1,0,0"/>
            <Label Text="{Binding Text}" VerticalOptions="Center" FontSize="{Binding FontSize}" TextColor="{StaticResource Foreground}"/>
        </Grid>
    </ContentView.Content>
</ContentView>

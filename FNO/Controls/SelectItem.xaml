<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:controls="clr-namespace:FNO.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="FNO.Controls.SelectItem">
    <ContentView.Content>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <BoxView BackgroundColor="{StaticResource Background}" Opacity="0.8" 
                     VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            <Label x:Name="Discription" Text="{Binding Text}" 
                   VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <StackLayout x:Name="Area" Orientation="Vertical" VerticalOptions="End" Margin="0,0,0,30">
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>

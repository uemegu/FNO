<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FNO.Controls.NamePlate">
    <ContentView.Content>
        <Grid HeightRequest="{StaticResource PlateHeight}">
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                <Label Text="{Binding MainName.Chu2Name}" FontSize="{StaticResource SmallFontSize}" HorizontalOptions="CenterAndExpand"/>
                <Label Text="{Binding PlayerName}"  FontSize="{StaticResource MiddleFontSize}" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>
